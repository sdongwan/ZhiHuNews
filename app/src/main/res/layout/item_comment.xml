<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:layout_marginBottom="3dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_comment_head"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@mipmap/icon_zhihu" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:minHeight="50dp">

        <TextView
            android:id="@+id/item_comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是标题"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_comment_zan_count"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/item_comment_zan_count"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@mipmap/icon_zan_gray" />

        <TextView
            android:id="@+id/item_comment_zan_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_comment_title"
            android:layout_marginTop="10dp"
            android:text="这是内容fdsssssssssssssssssssssssssssssssssssssssssssssssssssssssssssfsdddddddddddddddddddddfsdddddddddddddddddddddddddddfdssssssssssssssswoaini"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_comment_content"
            android:layout_marginTop="10dp"
            android:text="11-27 14:58"
            android:textSize="13sp" />


    </RelativeLayout>
</LinearLayout>